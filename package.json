{
  "name": "env-vault",
  "version": "0.1.0",
  "description": "Utility for environment synchronization with credentials vaults.",
  "license": "MIT",
  "keywords": [
    "env",
    "environment",
    "vault",
    "secrets",
    "1password"
  ],
  "main": "./dist/tsc/main.js",
  "types": "./dist/tsc/main.d.ts",
  "bin": {
    "ev": "./dist/tsc/cli.js"
  },
  "scripts": {
    "ev": "ts-node src/cli.ts",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/cli.ts",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc --watch -p tsconfig.json",
    "precompile": "yarn build",
    "compile": "pkg -o ev .",
    "compile:mac": "pkg -t macos-x64 -o ev .",
    "compile:linux": "pkg -t linux-x64 -o ev .",
    "compile:win": "pkg -t win-x64 -o ev .",
    "compile:all": "pkg -t macos-x64,linux-x64,win-x64 -o ev .",
    "postcompile": "yarn clean",
    "release": "./scripts/release.sh",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/figlet": "^1.5.4",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "commander": "^8.2.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "is-invalid-path": "^1.0.2",
    "jest": "^26.6.3",
    "pinst": "^3.0.0",
    "pkg": "^5.6.0",
    "prettier": "^2.6.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "axios": "^0.22.0",
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "figlet": "^1.5.2",
    "lodash": "^4.17.21"
  },
  "pkg": {
    "assets": [
      "node_modules/figlet/fonts/Standard.flf"
    ]
  }
}
